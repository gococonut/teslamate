# 数据库配置
DATABASE_URL=postgresql://teslamate:secret@localhost:5432/teslamate?sslmode=disable

# 加密密钥（必须是32字节）
# 生成命令: openssl rand -hex 16
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# API 密钥（逗号分隔，用于保护API端点）
API_KEYS=your-api-key-1,your-api-key-2

# Gin 运行模式 (debug, release, test)
GIN_MODE=release

# 服务端口
PORT=8080

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# CORS 配置
CORS_ORIGINS=http://localhost:3000,https://teslamate.example.com

# Token 刷新配置
TOKEN_REFRESH_BEFORE_EXPIRY=3600  # 在过期前1小时自动刷新

# Tesla API 超时设置（秒）
TESLA_API_TIMEOUT=30

# 请求限制（每分钟）
RATE_LIMIT_PER_MINUTE=60